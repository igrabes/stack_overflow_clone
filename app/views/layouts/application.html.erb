<!DOCTYPE html>
<html>
<head>
  <title>StackOverflowClone</title>
  <%= stylesheet_link_tag 'application.css' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div class="userbar">
    <% if current_user %>
      Welcome, <%= current_user.login %> (<%= link_to "Edit profile", edit_account_path %>, <%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>)
    <% else %>
      <%= link_to "Register", new_user_path %> | <%= link_to "Login", new_user_session_path %>
    <% end %>
  </div>
  <br/>

  <div id="content">
    <div class="nav mainnavs">
        <ul>
            <li><a id="nav-questions" href="/questions">Questions</a></li>
            <li><a id="nav-tags" href="/tags">Tags</a></li>
            <li><a id="nav-unanswered" href="/unanswered">Unanswered</a></li>
        </ul>
    </div>

    <% if current_user %>
      <div class="nav askquestion">
        <ul>
          <li>
            <%= link_to "Ask question", new_question_path %>
          </li>
        </ul>
      </div>
    <% end %>

    <div class="fc">
      <%= yield %>
    </div>
  </div>

</body>
</html>
